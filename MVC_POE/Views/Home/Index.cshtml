@{
    ViewData["Title"] = "Home Page";
}

<!-- Bootstrap Carousel + Custom Styles -->
<style>
    /* Hero Section */
    .video-hero {
        position: relative;
        height: 100vh;
        width: 100%; /* ensures full viewport width */
        overflow: hidden;
    }

        .video-hero video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%; /* fill container width */
            height: 100%; /* fill container height */
            object-fit: cover; /* crops video edges to fill */
        }

        body {
    overflow-x: hidden;
}

    .video-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        text-align: center;
    }

        .video-overlay h1 {
            font-size: 3rem;
            font-weight: bold;
            color: #fff;
        }

    /* Intro Section */
    .intro-section {
        text-align: center;
        padding: 50px 20px;

    }

        .intro-section h2 {
            font-size: 2rem;
            margin-bottom: 20px;
        }
    /* Card hover effect */ 
    .municipality-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 60px;
        overflow: hidden;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .municipality-card:hover {
            transform: scale(1.06);
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
        }

        .municipality-card img {
            height: 200px;
            object-fit: contain;
            object-position: center;
            width: 100%;
        }

        .municipality-card .card-body {
            flex-grow: 1; 
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 1rem;
        }

        .municipality-card .btn {
            width: 100%;
            background-color: black;
            border: none;
            border-radius: 0 0 15px 15px;
            margin-top: auto; 
            color: white;
            font-size: 16px;
            font-weight: bold;
        }

    .card-disabled {
        background-color: black;
        color: #e9ecef;
        opacity: 0.9; /* keep a subtle transparency */
        pointer-events: none;
        border-radius: 60px; /* apply your curve */
        overflow: hidden; /* ensures background follows the radius */
    }

        /* Make the image itself dark/black */
        .card-disabled img {
            filter: grayscale(80%) brightness(0.5);
            border-radius: 60px 60px 0 0; /* match card’s top radius */
        }

</style>

<!-- Full-Screen Video Hero -->
<div class="video-hero">
