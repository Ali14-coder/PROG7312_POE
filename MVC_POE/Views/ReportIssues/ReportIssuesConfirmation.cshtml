@model MVC_POE.Models.ReportIssuesForm

@{
    ViewData["Title"] = "ReportIssuesConfirmation";
}

<br/>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Large Card Display -->
            <div class="card shadow-lg">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0">Confirm Your Report</h3>
                </div>
                <div class="card-body">
                    <p><strong>Location:</strong> @Model.Location</p>
                    <p><strong>Category:</strong> @Model.Category</p>
                    <p><strong>Description:</strong> @Model.Description</p>

                    @if (!string.IsNullOrEmpty(Model.MediaAttachment))
                    {
                        <p><strong>Attachment:</strong></p>
                        <img src="@Url.Content(Model.MediaAttachment)" alt="Uploaded Image" style="max-width:100%; height:auto; border-radius:10px;" />
                    }
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <form asp-action="CreateReportIssues" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="FormId" />
                        <input type="hidden" asp-for="Location" />
                        <input type="hidden" asp-for="Category" />
                        <input type="hidden" asp-for="Description" />
                        <input type="hidden" asp-for="MediaAttachment" />
                        <button type="submit" class="stroke-button">Back</button>
                    </form>

                    <!-- Confirm button triggers final submission -->
                    <form asp-action="ConfirmReportIssues" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="FormId" />
                        <input type="hidden" asp-for="Location" />
                        <input type="hidden" asp-for="Category" />
                        <input type="hidden" asp-for="Description" />
                        <input type="hidden" asp-for="MediaAttachment" />
                        <button type="submit" class="button">Confirm</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
