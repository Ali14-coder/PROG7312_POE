<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC_POE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_POE.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Archivo:ital,wght@0,100..900;1,100..900&family=Bitter:ital,wght@0,100..900;1,100..900&family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        /* Curved banner styling */
        .municipality-banner {
            position: relative;
            background: linear-gradient(145deg, #e6c200, #ff6500, #800000);
            color: white;
            padding: 1.1rem 1.1rem;
            border-bottom-left-radius: 50% 45%;
            border-bottom-right-radius: 50% 45%;
            text-align: right; 
            
        }

            .municipality-banner h1 {
                font-size: 2.5rem;
                font-weight: bold;
            }

            .municipality-banner p {
                font-size: 1.2rem;
                opacity: 0.9;
            }
    </style>
</head>
<body>
    <header class="municipality-banner" style="margin-bottom: 1rem">
        <a asp-controller="ReportIssues" asp-action="ViewReportIssues" class="btn btn-outline-light">View All Reports</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-light" style="margin-right:6rem">Home</a>
    </header>

    <main role="main" class="flex-grow-1">
        <div class="container pb-3">
            @RenderBody()
        </div>
        </main>
        @* <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - MVC_POE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer> *@
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
   
</body>
</html>
